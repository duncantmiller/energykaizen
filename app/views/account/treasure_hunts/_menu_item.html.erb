<% if can? :read, TreasureHunt.new(team: current_team) %>
  <%= render 'account/shared/menu/item', {
    url: main_app.polymorphic_path([:account, current_team, :treasure_hunts]),
    label: t('treasure_hunts.navigation.label'),
  } do |p| %>
    <% p.icon do %>
      <i class="<%= t('treasure_hunts.navigation.icon') %>"></i>
    <% end %>
  <% end %>
<% end %>
